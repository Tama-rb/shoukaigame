<%= form_for @conjunction do |f| %>
  <div class="row">
    <div class="col-xs-6">
      <%= f.text_field :content, class: "form-control" %>
    </div>
    <div class="col-xs-2">
      <%= f.submit "登録する", class: "btn btn-default btn-lg btn-block" %>
    </div>
    <div class="col-xs-2">
      <%= link_to "戻る", :back, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
<hr/>
